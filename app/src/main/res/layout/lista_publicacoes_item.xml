<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lista_descricao_publicacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/font_size"
        />
    <TextView
        android:id="@+id/lista_origem_publicacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lista_publicacao_tipo_publicacao"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/lista_tipo_publicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lista_publicacao_data_publicacao"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/lista_data_publicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/lista_ver_andamento"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/lista_publicacao_ver_andamentos"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/lista_ver_intimacao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/lista_publicacao_ver_intimacao"
            android:textSize="12sp"/>
    </GridLayout>
</LinearLayout>